{
  "name": "riku",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --color",
    "dev": "turbo run dev --parallel --color",
    "lint": "turbo run lint",
    "test": "turbo run test --parallel",
    "test:watch": "turbo run test:watch --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "turbo run build --filter=riku --filter=create-riku-app && changeset version && changeset publish",
    "prerelease:riku": "turbo run build --filter=riku",
    "release:riku": "changeset version && changeset publish",
    "release:cra": "turbo run build --filter=create-riku-app && changeset version && changeset publish"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "eslint-config-custom": "*",
    "prettier": "^2.7.1",
    "sass": "^1.56.0",
    "tsconfig-paths": "^4.1.0",
    "tsup": "^6.3.0",
    "turbo": "latest",
    "vitest": "^0.24.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.19.2",
  "dependencies": {
    "@changesets/cli": "^2.25.0",
    "@code-hike/mdx": "^0.7.4",
    "@mdx-js/loader": "^2.1.5",
    "@next/font": "^13.0.2",
    "@next/mdx": "^13.0.2",
    "chalk": "^5.1.2",
    "config": "^3.3.8",
    "create-riku-app": "*",
    "dotenv": "^16.0.3",
    "next": "^13.0.2",
    "riku": "*"
  }
}
