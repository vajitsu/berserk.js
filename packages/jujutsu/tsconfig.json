{
  "include": ["src", "builders"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "utils": ["src/utils.ts"]
    }
  }
}
